@using Code.MvcUI.Models
@{
    Layout = null;
    UserData userData = UserData.InitData();
    string ID = "";
    string Name = "";
    if (userData != null)
    {
        ID = userData.ID.ToString();
        Name = userData.UserName;
    }
}
